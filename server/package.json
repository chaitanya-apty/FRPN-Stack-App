{
  "name": "server",
  "version": "1.0.0",
  "description": "Todo App server with postgres",
  "main": "index.js",
  "author": "Chaitanya",
  "license": "MIT",
  "dependencies": {
    "dotenv": "8.2.0",
    "fastify": "2.13.0",
    "fastify-cors": "3.0.2",
    "fastify-static": "2.6.0",
    "http-status-codes": "1.4.0",
    "node": "13.10.1",
    "pg": "7.18.2",
    "node-pg-migrate": "4.6.1",
    "cross-env": "7.0.2",
    "typescript": "3.8.3"
  },
  "scripts": {
    "start": "tsc-watch --onSuccess \"node dist/main.js\" --onFailure \"echo Check compilation errors\"",
    "lint": "eslint --ext ts src",
    "test": "ts-mocha --exit src/tests/**/*.spec.ts",
    "build": "tsc --outDir build",
    "migration": "node-pg-migrate create -s todoapp -t migrations",
    "migrate": "node-pg-migrate -s todoapp -t migrations",
    "migrate-up": "npm run migrate up",
    "start:prod": "cross-env NODE_ENV=production node build/main.js"
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/mocha": "7.0.2",
    "@types/node": "13.9.2",
    "@types/pg": "7.14.3",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "chai": "4.2.0",
    "eslint": "6.8.0",
    "mocha": "7.1.1",
    "ts-mocha": "7.0.0",
    "tsc-watch": "4.2.3"
  }
}
